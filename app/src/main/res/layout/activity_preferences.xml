<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="es.ieselcaminas.amo11k.tablelayout1.preferences"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Select a game:"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_weight="1" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:layout_marginLeft="80dp"
        android:id="@+id/rbg">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Angry Birds"
            android:id="@+id/rbAngry"
            android:checked="false"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Dragon Fly"
            android:id="@+id/rbDragon"
            android:checked="false"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Hill Climbing Racing"
            android:id="@+id/rbHill"
            android:checked="false"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Pocket Soccer"
            android:id="@+id/rbSoccer"
            android:checked="false"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Radiant Defense"
            android:id="@+id/rbDefense"
            android:checked="false"
            android:layout_weight="1" />
    </RadioGroup>

    <RatingBar
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/ratingBar"
        android:layout_weight="1"
        android:layout_marginTop="100dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/seekBar"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />


    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/fab"
        android:src="@android:drawable/ic_dialog_email"
        android:layout_gravity="bottom|end" />

</LinearLayout>
